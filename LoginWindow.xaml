<Window
    x:Class="GB_NewCadPlus_III.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="370"
    Height="500"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GB_NewCadPlus_III;component/MainWindowStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="5,5,5,5" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="6,0,6,6"
            FontSize="18"
            FontWeight="Bold"
            Foreground="#0078D4"
            Text="登录" />

        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Margin="4,0,4,5"
            Orientation="Vertical">
            <Separator Margin="0,1,0,8" />
            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                Text="注册部门：" />
            <ComboBox
                x:Name="CmbDepartments"
                Margin="0,0,0,5"
                DisplayMemberPath="Name"
                SelectedValuePath="Id" />


            <TextBlock
                Margin="2,0,0,2"
                FontSize="12"
                Text="用户名：" />
            <TextBox x:Name="TxtUsername" Height="26" />

            <TextBlock
                Margin="2,8,0,2"
                FontSize="12"
                Text="密码：" />
            <PasswordBox x:Name="PwdBox" Height="26" />

            <StackPanel
                Width="351"
                Margin="0,5,0,5"
                Orientation="Horizontal">
                <CheckBox
                    x:Name="ChkSavePassword"
                    Margin="0,0,12,0"
                    Content="保存密码" />
                <TextBlock Width="60" Margin="200,0,0,0"><Hyperlink Click="ForgetPassword_Click">
                        <Run Text="忘记密码？" />
                    </Hyperlink></TextBlock>
            </StackPanel>
            <!--<TextBlock Margin="0,6,0,0" Width="65" HorizontalAlignment="Right">
                <Hyperlink Click="ForgetPassword_Click">忘记密码？</Hyperlink>
            </TextBlock>-->
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            Grid.RowSpan="2"
            Width="204"
            Height="42"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="BtnCancel"
                Width="90"
                Height="30"
                Margin="6"
                Click="BtnCancel_Click"
                Content="取消" />
            <Button
                x:Name="BtnLogin"
                Width="90"
                Height="30"
                Margin="6"
                Click="BtnLogin_Click"
                Content="登录" />
        </StackPanel>

        <StackPanel
            Grid.Row="6"
            Grid.RowSpan="2"
            Margin="4,0,4,5"
            Orientation="Vertical">
            <Separator Margin="0,0,0,8" />
            <TextBlock
                Margin="2,0,0,2"
                FontSize="12"
                Text="服务器 IP：" />
            <TextBox
                x:Name="TxtServerIP"
                Height="26"
                Style="{StaticResource WatermarkTextBoxStyle}"
                Tag="例如：127.0.0.1" />

            <TextBlock
                Margin="2,8,0,2"
                FontSize="12"
                Text="端口：" />
            <TextBox
                x:Name="TxtServerPort"
                Height="26"
                PreviewTextInput="TxtServerPort_PreviewTextInput" />
        </StackPanel>

        <!--  状态显示：用于在代码中更新登录、保存等状态  -->
        <TextBlock
            x:Name="TxtStatus"
            Grid.Row="8"
            Height="32"
            Margin="6,0,6,0"
            FontSize="12"
            Foreground="Gray"
            Text="状态信息"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Row="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="BtnSaveServer"
                Width="150"
                Height="24"
                Click="BtnSaveServer_Click"
                Content="保存服务器\端口" />
        </StackPanel>
    </Grid>
</Window>
