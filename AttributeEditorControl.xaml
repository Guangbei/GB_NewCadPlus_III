<UserControl
    x:Class="GB_NewCadPlus_III.AttributeEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GB_NewCadPlus_III"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="320"
    MinHeight="200"
    mc:Ignorable="d">
    <Border
        Padding="8"
        Background="White"
        BorderBrush="LightGray"
        BorderThickness="1"
        CornerRadius="4">
        <DockPanel>
            <!--  顶部工具栏  -->
            <StackPanel
                Margin="0,0,0,8"
                HorizontalAlignment="Right"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnReload"
                    Margin="0,0,8,0"
                    Padding="8,4"
                    Click="BtnReload_Click"
                    Content="重新加载" />
                <Button
                    x:Name="BtnSave"
                    Padding="8,4"
                    Click="BtnSave_Click"
                    Content="保存属性" />
            </StackPanel>

            <!--  可滚动的属性表单  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="FieldsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="6"
                                BorderBrush="#EEE"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="220" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  左侧标签：显示名（单位）  -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock FontWeight="Bold" Text="{Binding DisplayName}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="Gray"
                                            Text="{Binding Unit}" />
                                    </StackPanel>

                                    <!--  右侧：根据数据类型显示不同控件  -->
                                    <StackPanel Grid.Column="1">
                                        <!--  对不同类型都先用 TextBox 展示（简单可编辑），并提供日期选择和数值输入的帮助  -->
                                        <TextBox
                                            MinWidth="120"
                                            Text="{Binding ValueString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=string}" />

                                        <TextBox
                                            MinWidth="120"
                                            Text="{Binding ValueNumberString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=number}" />

                                        <DatePicker SelectedDate="{Binding ValueDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=date}" />

                                        <!--  fallback：当类型未知时显示编辑框  -->
                                        <TextBox
                                            MinWidth="120"
                                            Text="{Binding ValueString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Visibility="{Binding DataType, Converter={StaticResource DataTypeToVisibilityConverter}, ConverterParameter=any}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
