                                    Header="预览">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Image
                                                    x:Name="PreviewImage"
                                                    Width="80"
                                                    Height="60"
                                                    Loaded="PreviewImage_Loaded"
                                                    Stretch="Uniform">
                                                    <Image.Tag>
                                                        <Binding Path="." />
                                                    </Image.Tag>
                                                </Image>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <!--  设置DataGrid的行样式  -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="70" />
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                    <!--  第四行  -->
                    <Grid
                        Grid.Row="3"
                        Height="155"
                        Background="Azure">

                        <Button
                            Width="NaN"
                            Height="22"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="5,3,257,127"
                            Click="SelectFile_Btn_Click"
                            FontSize="14">
                            <TextBlock
                                x:Name="add_Graphice"
                                FontSize="12"
                                Text="选择图元文件" />
                        </Button>
                        <TextBox
                            x:Name="file_Path"
                            Width="245"
                            Height="20"
                            Margin="90,0,0,129"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            AcceptsTab="True"
                            BorderThickness="1,2,1,1"
                            FontSize="8"
                            SelectionOpacity="0.5"
                            Style="{StaticResource WatermarkTextBoxStyle}"
                            Tag="文件路径："
                            TextWrapping="Wrap" />
                        <Button
                            Width="NaN"
                            Height="22"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="5,28,257,105"
                            Click="SelectViewImage_Btn_Click"
                            FontSize="14">
                            <TextBlock
                                x:Name="del_Graphice"
                                FontSize="12"
                                Text="选择预览图" />
                        </Button>
                        <TextBox
                            x:Name="view_File_Path"
                            Width="245"
                            Height="20"
                            Margin="90,0,0,106"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            AcceptsTab="True"
                            BorderThickness="1,2,1,1"
                            FontSize="8"
                            SelectionOpacity="0.5"
                            Style="{StaticResource WatermarkTextBoxStyle}"
                            Tag="预览图文件路径："
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="File_Name"
                            Width="147"
                            Height="20"
                            Margin="90,0,0,83"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            AcceptsTab="True"
                            BorderThickness="1,2,1,1"
                            FontSize="10"
                            SelectionOpacity="0.5"
                            Style="{StaticResource WatermarkTextBoxStyle}"
                            Tag="文件名称："
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="File_Size"
                            Width="147"
                            Height="20"
                            Margin="90,0,0,60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            AcceptsTab="True"
                            BorderThickness="1,2,1,1"
                            FontSize="10"
                            SelectionOpacity="0.5"
                            Style="{StaticResource WatermarkTextBoxStyle}"
                            Tag="文件大小："
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="File_Type"
                            Width="147"
                            Height="20"
                            Margin="90,0,0,36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            AcceptsTab="True"
                            BorderThickness="1,2,1,1"
                            FontSize="10"
                            SelectionOpacity="0.5"
                            Style="{StaticResource WatermarkTextBoxStyle}"
                            Tag="文件类型："
                            TextWrapping="Wrap" />


                        <Button
                            x:Name="DeleteGraphic_Btn"
                            Width="NaN"
                            Height="22"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="5,51,257,82"
                            Click="DeleteGraphic_Btn_Click"
                            Content="删除图元"
                            FontSize="12" />
                        <Button
                            Width="70"
                            Height="22"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="90,127,182,6"
                            Click="ResetToInitial_Btn_Click"
                            Content="还原初始值"
                            FontSize="12" />
                        <Button
                            x:Name="ApplyProperties_Btn"
                            Width="70"
                            Height="22"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="167,127,105,6"
                            Click="ApplyProperties_Btn_Click"
                            Content="应用属性"
                            FontSize="12" />
                        <Button
                            x:Name="AddFile_Btn"
                            Width="NaN"
                            Height="28"
                            MaxWidth="200"
                            MaxHeight="50"
                            Margin="5,123,257,4"
                            Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                            Click="AddFile_Btn_Click"
                            Content="完成添加"
                            FontSize="14"
                            Foreground="White" />
                        <Button
                            x:Name="ImportFromSelection_Btn"
                            Width="80"
                            Height="22"
                            MaxWidth="80"
                            MaxHeight="22"
                            Margin="5,0,0,59"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Click="ImportFromSelection_Btn_Click"
                            Content="添加当前图形入库"
                            FontSize="10" />
                        <Button
                            x:Name="批量添加图元_Btn"
                            Width="80"
                            Height="22"
                            MaxWidth="80"
                            MaxHeight="22"
                            Margin="5,0,0,36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Click="批量添加图元_Btn_Click"
                            Content="批量添加图元"
                            FontSize="12" />
                        <Image
                            x:Name="ViewImage"
                            Width="100"
                            Height="100"
                            Margin="239,52,3,3"
                            Stretch="Uniform" />

                    </Grid>
                    <Grid Grid.Row="4" Background="FloralWhite" />
                    <Grid Grid.Row="5">
                        <ScrollViewer Margin="0,0,0,0" VerticalScrollBarVisibility="Auto">
                            <!--  属性编辑DataGrid  -->
                            <DataGrid
                                x:Name="CategoryPropertiesDataGrid"
                                Grid.Row="0"
                                Margin="0"
                                AutoGenerateColumns="False"
                                CanUserAddRows="True"
                                CanUserDeleteRows="True"
                                FontSize="11"
                                GridLinesVisibility="All"
                                HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="*" Header="属性名称1">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PropertyName1}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    InputMethod.IsInputMethodEnabled="True"
                                                    Language="zh-CN"
                                                    Text="{Binding PropertyName1, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*" Header="值1">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PropertyValue1}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    InputMethod.IsInputMethodEnabled="True"
                                                    Language="zh-CN"
                                                    Text="{Binding PropertyValue1, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*" Header="属性名称2">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PropertyName2}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    InputMethod.IsInputMethodEnabled="True"
                                                    Language="zh-CN"
                                                    Text="{Binding PropertyName2, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*" Header="值2">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PropertyValue2}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    InputMethod.IsInputMethodEnabled="True"
                                                    Language="zh-CN"
                                                    Text="{Binding PropertyValue2, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                Width="110"
                HorizontalAlignment="Right"
                Header="部门\人员模块">
                <local:DepartmentAdminControl Height="auto" />
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
