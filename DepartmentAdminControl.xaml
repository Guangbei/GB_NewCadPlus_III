<UserControl
    x:Class="GB_NewCadPlus_III.DepartmentAdminControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GB_NewCadPlus_III"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    Height="650"
    d:Name="DepartmentAdminControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  引用外部样式资源文件  -->
                <ResourceDictionary Source="/GB_NewCadPlus_III;component/MainWindowStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Column="0"
            Margin="0"
            Background="#FFECECEC">
            <TextBlock
                Margin="8,5,0,6"
                FontSize="14"
                FontWeight="Bold"
                Text="部门管理" />
            <StackPanel
                Margin="0,0,0,6"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSync"
                    Width="100"
                    Margin="8,0,6,0"
                    Click="BtnSync_Click"
                    Content="按分类同步部门" />
                <Button
                    x:Name="BtnAddDept"
                    Width="60"
                    Margin="0,0,6,0"
                    Click="BtnAddDept_Click"
                    Content="新增部门" />
                <Button
                    x:Name="BtnEditDept"
                    Width="60"
                    Margin="0,0,6,0"
                    Click="BtnEditDept_Click"
                    Content="编辑部门" />
                <Button
                    x:Name="BtnDeleteDept"
                    Width="60"
                    Click="BtnDeleteDept_Click"
                    Content="删除部门" />
            </StackPanel>

            <DataGrid
                x:Name="DepartmentsGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionChanged="DepartmentsGrid_SelectionChanged"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="40"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Name}"
                        Header="名称" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding DisplayName}"
                        Header="显示名" />
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding UserCount}"
                        Header="用户数" />
                    <DataGridTextColumn
                        Width="40"
                        Binding="{Binding SortOrder}"
                        Header="排序" />
                    <DataGridCheckBoxColumn
                        Width="40"
                        Binding="{Binding IsActive}"
                        Header="启用" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0"
            Background="#FFECECEC">
            <TextBlock
                Margin="5,8,5,8"
                FontSize="14"
                FontWeight="Bold"
                Text="部门用户 / 分配" />
            <TextBlock
                Margin="10,0,5,5"
                FontWeight="SemiBold"
                Text="选中部门用户列表：" />
            <DataGrid
                x:Name="UsersGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding Id}"
                        Header="用户ID" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Username}"
                        Header="用户名" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding FullName}"
                        Header="姓名" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Email}"
                        Header="邮箱" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel
                Margin="0,8,0,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBox
                    x:Name="TxtSearchUser"
                    Width="350"
                    Margin="0,0,6,0"
                    VerticalAlignment="Bottom"
                    Text="输入用户名搜索/分配" />

            </StackPanel>

        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Width="154"
            Height="22"
            Margin="10,0,0,58"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <Button
                x:Name="BtnRefresh"
                Width="150"
                Height="20"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="BtnRefresh_Click"
                Content="刷新" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Width="154"
            Height="22"
            Margin="0,0,10,58"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button
                x:Name="BtnAssignUser"
                Width="150"
                Height="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Click="BtnAssignUser_Click"
                Content="将用户分配到选中部门" />

        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Height="50"
            VerticalAlignment="Bottom">
            <TextBlock
                x:Name="TxtStatus"
                Height="45"
                Margin="0,0,0,0"
                Foreground="Gray"
                TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</UserControl>