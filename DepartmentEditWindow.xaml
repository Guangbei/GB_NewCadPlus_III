<Window
    x:Class="GB_NewCadPlus_III.DepartmentEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GB_NewCadPlus_III"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="部门编辑"
    Width="420"
    Height="280"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="部门名称：" />
            <TextBox x:Name="TxtDeptName" Width="260" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="显示名称：" />
            <TextBox x:Name="TxtDisplayName" Width="260" />
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="排序序号：" />
            <TextBox
                x:Name="TxtSortOrder"
                Width="120"
                Text="0" />
            <TextBlock
                Width="100"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Text="  负责人UserId：" />
            <TextBox x:Name="TxtManagerUserId" Width="60" />
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Vertical">
            <TextBlock Margin="0,0,0,4" Text="描述：" />
            <TextBox
                x:Name="TxtDescription"
                Height="60"
                AcceptsReturn="True"
                TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel
            Grid.Row="8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <CheckBox
                x:Name="ChkIsActive"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Content="启用"
                IsChecked="True" />
            <Button
                Width="90"
                Height="28"
                Margin="0,0,8,0"
                Click="BtnOk_Click">
                确定
            </Button>
            <Button
                Width="90"
                Height="28"
                Click="BtnCancel_Click">
                取消
            </Button>
        </StackPanel>
    </Grid>
</Window>
