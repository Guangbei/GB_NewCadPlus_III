<UserControl
    x:Class="GB_NewCadPlus_III.CraftUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--  主网格  -->
        <!--  纵向TabControl  -->
        <TabControl>
            <!--  选项卡控件  -->
            <TabControl.Resources>
                <!--  资源字典  -->
                <!--  纵向TabControl样式  -->
                <Style TargetType="{x:Type TabControl}">
                    <!--  选项卡控件样式  -->
                    <Setter Property="Template">
                        <!--  设置模板  -->
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabControl}">
                                <!--  控制模板  -->
                                <Grid>
                                    <!--  模板网格  -->
                                    <Grid.ColumnDefinitions>
                                        <!--  定义列  -->
                                        <ColumnDefinition Width="200" />
                                        <!--  左侧标签列  -->
                                        <ColumnDefinition Width="*" />
                                        <!--  右侧内容列  -->
                                    </Grid.ColumnDefinitions>

                                    <!--  左侧Tab项头  -->
                                    <TabPanel
                                        Grid.Column="0"
                                        Margin="0,0,1,0"
                                        Background="#f5f5f5"
                                        IsItemsHost="True" />
                                    <!--  右边距1像素  -->

                                    <!--  右侧内容区域  -->
                                    <!--  绑定选中内容  -->
                                    <ContentPresenter
                                        Grid.Column="1"
                                        Margin="5"
                                        ContentSource="SelectedContent" />
                                    <!--  5像素边距  -->
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!--  TabItem样式  -->
                <Style TargetType="{x:Type TabItem}">
                    <!--  选项卡项样式  -->
                    <Setter Property="Template">
                        <!--  设置模板  -->
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <!--  控制模板  -->
                                <Grid>
                                    <!--  模板网格  -->
                                    <!--  默认背景色  -->
                                    <!--  边框颜色  -->
                                    <!--  边框厚度  -->
                                    <Border
                                        Name="Border"
                                        Margin="0,0,-1,0"
                                        Background="LightGray"
                                        BorderBrush="DarkGray"
                                        BorderThickness="1,1,0,1">
                                        <!--  负右边距消除重叠  -->
                                        <!--  垂直居中  -->
                                        <!--  水平左对齐  -->
                                        <!--  绑定头部内容  -->
                                        <ContentPresenter
                                            x:Name="ContentSite"
                                            Margin="10,8"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            ContentSource="Header" />
                                        <!--  边距  -->
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!--  模板触发器  -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <!--  选中状态触发器  -->
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                        <!--  选中背景色  -->
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4" />
                                        <!--  选中边框色  -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!--  工艺管理Tab  -->
            <TabItem Header="工艺管理">
                <!--  第一个选项卡  -->
                <Grid>
                    <!--  选项卡内容网格  -->
                    <Grid.ColumnDefinitions>
                        <!--  定义列  -->
                        <ColumnDefinition Width="250" />
                        <!--  左侧树形视图列  -->
                        <ColumnDefinition Width="*" />
                        <!--  右侧内容列  -->
                    </Grid.ColumnDefinitions>

                    <!--  左侧TreeView区域  -->
                    <!--  边框颜色  -->
                    <!--  右边框  -->
                    <Border
                        Grid.Column="0"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,1,0">
                        <!--  白色背景  -->
                        <StackPanel>
                            <!--  垂直栈面板  -->
                            <!--  边距  -->
                            <TextBlock
                                Margin="10,10,10,5"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#0078D4"
                                Text="工艺列表" />
                            <!--  蓝色文字  -->

                            <!--  TreeView显示工艺数据  -->
                            <!--  5像素边距  -->
                            <TreeView
                                x:Name="CraftTreeView"
                                Margin="5"
                                ItemsSource="{Binding CraftTreeData}">
                                <!--  绑定树形数据  -->
                                <TreeView.ItemTemplate>
                                    <!--  项模板  -->
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <!--  层次数据模板  -->
                                        <!--  绑定名称  -->
                                        <!--  字体大小  -->
                                        <TextBlock
                                            Padding="2"
                                            FontSize="12"
                                            Text="{Binding Name}" />
                                        <!--  内边距  -->
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </StackPanel>
                    </Border>

                    <!--  右侧内容区域  -->
                    <Grid Grid.Column="1" Margin="10">
                        <!--  右侧网格  -->
                        <!--  水平居中  -->
                        <!--  垂直居中  -->
                        <!--  字体大小  -->
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            Text="选择左侧工艺项查看详细信息" />
                        <!--  灰色文字  -->
                    </Grid>
                </Grid>
            </TabItem>

            <!--  其他Tab项  -->
            <TabItem Header="参数设置">
                <!--  第二个选项卡  -->
                <!--  水平居中  -->
                <!--  垂直居中  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="参数设置页面" />
                <!--  字体大小  -->
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>