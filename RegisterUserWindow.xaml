<Window
    x:Class="GB_NewCadPlus_III.RegisterUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GB_NewCadPlus_III"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="注册用户"
    Width="350"
    Height="380"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            用户名：
        </TextBlock>
        <TextBox
            x:Name="TxtUsername"
            Grid.Row="0"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            密码：
        </TextBlock>
        <PasswordBox
            x:Name="PwdPassword"
            Grid.Row="1"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            确认密码：
        </TextBlock>
        <PasswordBox
            x:Name="PwdConfirm"
            Grid.Row="2"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            显示名：
        </TextBlock>
        <TextBox
            x:Name="TxtDisplayName"
            Grid.Row="3"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            性别：
        </TextBlock>
        <ComboBox
            x:Name="CmbGender"
            Grid.Row="4"
            Grid.Column="1"
            Margin="4,4,10,4">
            <ComboBoxItem Content="男" />
            <ComboBoxItem Content="女" />
            <ComboBoxItem Content="无信息" IsSelected="True" />
        </ComboBox>

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            手机号：
        </TextBlock>
        <TextBox
            x:Name="TxtPhone"
            Grid.Row="5"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            邮箱：
        </TextBlock>
        <TextBox
            x:Name="TxtEmail"
            Grid.Row="6"
            Grid.Column="1"
            Margin="4,4,10,4" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="10,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            部门：
        </TextBlock>
        <ComboBox
            x:Name="CmbDept"
            Grid.Row="7"
            Grid.Column="1"
            Height="21"
            Margin="4,4,10,0"
            VerticalAlignment="Top" />
        <TextBlock
            x:Name="TxtStatus"
            Grid.Row="8"
            Grid.ColumnSpan="2"
            Margin="8,8,8,8"
            Foreground="DarkRed"
            RenderTransformOrigin="0.528,0.378" />
        <StackPanel
            Grid.Row="9"
            Grid.Column="1"
            Width="200"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                x:Name="BtnRegister"
                Width="88"
                Margin="4,0"
                Click="BtnRegister_Click"
                Content="注册" />
            <Button
                Width="88"
                Margin="4,0"
                Click="BtnCancel_Click"
                Content="取消" />
        </StackPanel>
    </Grid>
</Window>
